<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeactivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To The-Dine"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingTop="150dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp">


        <Button
            android:id="@+id/menu"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Menu"
            android:backgroundTint="#D54D23"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:id="@+id/hirechefs"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hire Chefs"
            android:backgroundTint="#D54D23"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/knowthehotel"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Know Our Hotel"
            android:backgroundTint="#D54D23"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/makereservations"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:backgroundTint="#D54D23"
            android:layout_height="wrap_content"
            android:text="Make Reservations"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/recreationactivities"
            android:layout_width="match_parent"
            android:backgroundTint="#D54D23"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="Recreation Activities"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/ourgallery"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#D54D23"
            android:text="Our Gallery" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>